<div class="container">
  <div class="row" id="edit-user">
    <div class="col-md-12">
      <br>
      <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Criar Evento</h2>
      <br>

      <div class="calendar__container">
        <%= form_with(model: event, local: true) do |form| %>
          <% if event.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

              <ul>
                <% event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>

          <div class="form-group">
            <%= form.label :start_time %>
            <%= form.datetime_select :start_time %>
          </div>

          <div class="form-group">
            <%= form.label :end_time %>
            <%= form.datetime_select :end_time %>
          </div>

          <div class="form-group">
            <%= form.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .calendar__container {
    height: 100%;
    font-size: 26px;
    margin-bottom: 30%;
    margin-top: 5%;
    margin-left: 27%;
  }
</style>
